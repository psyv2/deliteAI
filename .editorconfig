# https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cpp,hpp}]
indent_size = 2
max_line_length = 100

[{CMakeLists.txt,*.cmake}]
indent_size = 2
max_line_length = 100

[*.py]
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2

[*.md]
max_line_length = 100
trim_trailing_whitespace = false
